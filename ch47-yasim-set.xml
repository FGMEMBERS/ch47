<?xml version="1.0"?>
<!--
************************************************************************
CH-47 Chinook simulation config.
Only FDM, Model from bo 105
Not realistic, only proof of concept for tandem rotor
************************************************************************
-->

<PropertyList>
    <sim>
        <description>CH-47 Chinook</description>
        <author>Melchior Franz, Maik Justus (FDM)</author>
        <status>alpha</status>
        <aircraft-version>0.1</aircraft-version>

        <flight-model>yasim</flight-model>
        <aero>ch47</aero>
        <fuel-fraction>0.8</fuel-fraction>


        <instrumentation>
            <path>Aircraft/bo105/Instruments/instrumentation.xml</path>
        </instrumentation>

        <sound>
            <path>Aircraft/bo105/Sounds/sound.xml</path>
        </sound>


        <panel>
            <visibility archive="n">false</visibility>
        </panel>

        <model>
            <path archive="y">Aircraft/ch47/Models/CH47.xml</path>
        </model>

        <view n="0">
            <internal archive="y">true</internal>
            <config>
                <x-offset-m archive="y">-0.7</x-offset-m>
                <!--right-->
                <y-offset-m archive="y">0.5</y-offset-m>
                <!--up-->
                <z-offset-m archive="y">-5.7</z-offset-m>
                <!--back-->
                <pitch-offset-deg>-5</pitch-offset-deg>
            </config>
        </view>

        <hud>
            <enable3d>false</enable3d>
        </hud>

        <weight n="0">
            <name>Pilot</name>
            <weight-lb>180</weight-lb>
            <max-lb>300</max-lb>
        </weight>

        <weight n="1">
            <name>Co-Pilot</name>
            <weight-lb>180</weight-lb>
            <max-lb>300</max-lb>
        </weight>

        <weight n="2">
            <name>Cargo</name>
            <weight-lb>0</weight-lb>
            <max-lb>25000</max-lb>
        </weight>


        <help>
            <title>CH47</title>
        </help>
    </sim>

    <input>
        <keyboard>
            <key n="78">
                <name>N</name>
                <desc>Toggle rotor brake</desc>
                <binding>
                    <command>property-toggle</command>
                    <property>/controls/rotor/brake</property>
                </binding>
            </key>
        </keyboard>
    </input>

    <controls>
        <engines>
            <engine n="0">
                <magnetos>0</magnetos>
            </engine>
            <engine n="1">
                <throttle>1</throttle>
            </engine>
        </engines>

        <lighting>
            <strobe type="bool">true</strobe>
            <beacon type="bool">true</beacon>
            <nav-lights type="bool">true</nav-lights>
        </lighting>
    </controls>

    <instrumentation>
        <gsdi>
            <serviceable type="bool">true</serviceable>
        </gsdi>
    </instrumentation>

    <rotors>
        <main>
            <rpm type="double">0</rpm>
        </main>
    </rotors>
</PropertyList>