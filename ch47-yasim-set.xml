<?xml version="1.0"?>
<!--
************************************************************************
CH-47 Chinook simulation config.
************************************************************************
-->

<PropertyList>
    <sim>
        <description>CH-47 Chinook</description>
        <author>Melchior Franz, Maik Justus (FDM),Syd Adams (3D)</author>
        <status>alpha</status>
        <aircraft-version>0.1</aircraft-version>

        <flight-model>yasim</flight-model>
        <aero>ch47d</aero>
        <fuel-fraction>0.8</fuel-fraction>


        <instrumentation>
            <path>Aircraft/bo105/Instruments/instrumentation.xml</path>
        </instrumentation>

        <sound>
            <path>Aircraft/bo105/Sounds/sound.xml</path>
        </sound>


        <panel>
            <visibility archive="n">false</visibility>
        </panel>

        <model>
            <path archive="y">Aircraft/ch47/Models/CH47.xml</path>
            <livery type="string">paint1.rgb</livery>
            <CH47>
                <texture type="string" n="0">paint1.rgb</texture>
                <texture type="string" n="1">paint2.rgb</texture>
                <texture type="string" n="2">paint3.rgb</texture>
                <texture type="string" n="3">paint4.rgb</texture>
            </CH47>
        </model>

        <startup>
            <splash-texture>Aircraft/ch47/ch47-splash.rgb</splash-texture>
        </startup>

        <view n="0">
            <internal archive="y">true</internal>
            <name>Pilot View</name>
            <config>
                <x-offset-m archive="y">0.57</x-offset-m>
                <!--right-->
                <y-offset-m archive="y">0.5</y-offset-m>
                <!--up-->
                <z-offset-m archive="y">-5.7</z-offset-m>
                <!--back-->
                <pitch-offset-deg>-15</pitch-offset-deg>
                <default-field-of-view-deg>60</default-field-of-view-deg>
            </config>
        </view>

        <view n="100">
    <name>Copilot View</name>
    <type>lookfrom</type>
    <internal type="bool">true</internal>
    <config>
      <from-model type="bool">true</from-model>
      <from-model-idx type="int">0</from-model-idx>
      <ground-level-nearplane-m type="double">0.5f</ground-level-nearplane-m>
      <default-field-of-view-deg type="double">60.0</default-field-of-view-deg>
      <default-pitch-deg type="double">0</default-pitch-deg>
      <default-heading-deg type="double">0</default-heading-deg>
      <front-direction-deg type="double">0</front-direction-deg>
      <front-left-direction-deg type="double">45</front-left-direction-deg>
      <left-direction-deg type="double">90</left-direction-deg>
      <back-left-direction-deg type="double">135</back-left-direction-deg>
      <back-direction-deg type="double">180</back-direction-deg>
      <back-right-direction-deg type="double">225</back-right-direction-deg>
      <right-direction-deg type="double">270</right-direction-deg>
      <front-right-direction-deg type="double">315</front-right-direction-deg>
      <dynamic-view type="bool">true</dynamic-view>
                <x-offset-m archive="y">-0.57</x-offset-m>
                <y-offset-m archive="y">0.5</y-offset-m>
                <z-offset-m archive="y">-5.7</z-offset-m>
                <pitch-offset-deg>-15</pitch-offset-deg>
    </config>
    <dynamic>
      <enabled type="bool">false</enabled>
    </dynamic>
  </view>

        <current-view>
            <field-of-view>60.0</field-of-view>
        </current-view>

        <chase-distance-m>-35</chase-distance-m>

        <turbulence-effect type = "bool">true</turbulence-effect>
        <allow-toggle-cockpit>true</allow-toggle-cockpit>

        <hud>
            <enable3d>false</enable3d>
        </hud>

        <weight n="0">
            <name>Pilot</name>
            <weight-lb>180</weight-lb>
            <max-lb>300</max-lb>
        </weight>

        <weight n="1">
            <name>Co-Pilot</name>
            <weight-lb>180</weight-lb>
            <max-lb>300</max-lb>
        </weight>

        <weight n="2">
            <name>Cargo</name>
            <weight-lb>0</weight-lb>
            <max-lb>25000</max-lb>
        </weight>


        <help>
            <title>CH47</title>
            <key>
                <name>L</name>
                <desc>Toggle liveries</desc>
            </key>
        </help>
    </sim>

    <input>
        <keyboard>
            <key n="78">
                <name>N</name>
                <desc>Toggle rotor brake</desc>
                <binding>
                    <command>property-toggle</command>
                    <property>/controls/rotor/brake</property>
                </binding>
            </key>
            <key n="76">
                <name>L</name>
                <desc>Toggle Livery</desc>
                <binding>
                    <command>nasal</command>
                    <script>
                    var lv = props.globals.getNode("sim/model/CH47");
                    var sz = size(lv.getChildren("texture"));
                    var nm=getprop("sim/model/variant");
                    nm = nm +1;
                    if(nm >=sz) nm= 0;
                    setprop("sim/model/variant",nm);
                    setprop("sim/model/livery",getprop("sim/model/CH47/texture["~nm~"]"));
                    </script>
                </binding>
            </key>
        </keyboard>
    </input>

    <controls>
        <engines>
            <engine n="0">
                <magnetos>0</magnetos>
            </engine>
            <engine n="1">
                <throttle>1</throttle>
            </engine>
        </engines>
        <gear>
            <brake-parking>1.0</brake-parking>
        </gear>
        <rotor>
            <pitch>1</pitch>
        </rotor>
        <lighting>
            <strobe type="bool">true</strobe>
            <beacon type="bool">true</beacon>
            <nav-lights type="bool">true</nav-lights>
        </lighting>
    </controls>

    <instrumentation>
        <gsdi>
            <serviceable type="bool">true</serviceable>
        </gsdi>
    </instrumentation>

    <rotors>
        <main>
            <rpm type="double">0</rpm>
        </main>
        <main2>
            <rpm type="double">0</rpm>
        </main2>
    </rotors>
</PropertyList>